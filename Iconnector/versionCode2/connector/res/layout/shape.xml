<?xml version="1.0" encoding="utf-8"?>   
<selector   
    xmlns:android="http://schemas.android.com/apk/res/android">   
    <!-- pressed -->   
    <item android:state_pressed="true" >   
        <shape  android:shape="rectangle">   
            <gradient   
                android:startColor="#0c9dde"  
                android:endColor="#0c9dde"  
                android:angle="270" />              
            <corners   
                android:radius="5dp" />   
        </shape>   
    </item>   
   <!-- focus -->   
   <item android:state_focused="true" >   
        <shape>   
            <gradient   
                android:startColor="#0c9dde"  
                android:endColor="#0c9dde"  
                android:angle="270" />               
            <corners   
                android:radius="5dp" />   
        </shape>   
    </item>   
        </selector>
